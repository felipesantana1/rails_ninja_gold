<h3>Your Gold: <%= session[:gold] %></h3>

<form action='money/farm' method='post'>
<b>Farm</b>
<p>(earn 10-20 golds)</p>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type='hidden' name='farm'>
<input type='submit' value='Find Gold!'>
</form>
<br>
<form action='money/cave' method='post'>
<b>Cave</b>
<p>(earn 5-10 golds)</p>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type='hidden' name='cave'>
<input type='submit' value='Find Gold!'>
</form>
<br>
<form action='money/house' method='post'>
<b>House</b>
<p>(earn 2-5 golds)</p>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type='hidden' name='house'>
<input type='submit' value='Find Gold!'>
</form>
<br>
<form action='money/casino' method='post'>
<b>Casino</b>
<p>(earn/lose 0-50 golds)</p>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type='hidden' name='casino'>
<input type='submit' value='Find Gold!'>
</form>

<h3>Activities</h3>
<ul>
<% session[:list].each do |x| %>
    <li><%= x['str'] %></li>
<% end %>
</ul>

<form action='money/reset' method='post'>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type='submit' value='Reset Gold!'>
</form>